<% unless current_user == user %>
    <!--いいねを解除ボタン-->
  <% if curent_user.liking?(record) %>
    <%= form_for(current_user.likes.find_by(like_id: record.id),html:{method: :delete}) do |f| %>
      <%= hidden_field_tag :like_id,record.id %>
      <%= f.submit 'いいねを解除', class: 'btn btn-danger btn-block' %>
    <% end %>
    <!--いいねボタン-->
  <% else %>
    <%= form_for(current_user.likes.build) do |f| %>
      <%= hidden_field_tag :like_id record.id %>
      <%= f.submit 'いいね！',class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>