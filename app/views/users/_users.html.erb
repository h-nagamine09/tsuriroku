<% if users.any? %>
  <ul class="media-list">
    <% users.each do |user| %>
    <li class="media">
      <div class="media-list">
        <img class="media-object img-rounded" src="<% if user.image? %><%= user.image.thumb80.url %><% else %><%= ("/images/no-image-icon.png") %><% end %>"alt="user-icon">
      </div>
      <div class="media-body">
        <div>
          <%= user.name %>
        </div>
        <div>
          <p><%= link_to 'プロフィールを見る', user_path(user) %></p>
        </div>
      </div>
    </li>
    <% end %>
  </ul>
    <%= paginate users %>
<% end %>