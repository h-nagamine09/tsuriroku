<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">
      <%= form_for(@record) do |f| %>
    
    <div class="form-group">
      <%= f.label :size, 'サイズ' %>
      <%= f.text_area :size, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :weight, 'ウェイト'%>
      <%= f.text_area :weight, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :place, '場所' %>
      <%= f.text_area :place, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :lure, 'ヒットルアー' %>
      <%= f.text_area :lure, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :wether, '天気' %>
      <%= f.text_area :wether, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :content, 'メモ' %>
      <%= f.text_area :content, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :date, '釣れた日' %>
      <div class="date-select">
        <%= f.date_select :date, class: 'form-control'%>
      </div>
    </div>
    <div class="form-group">
       <%= f.label :image, 'Photo' %>
       <%= f.file_field :image, class: 'form-control' %>
    </div>
   
    
       <%=f.submit '投稿', class: 'btn btn-primary btn-block' %>
       <% end %>
    </div>
   </div>
</div>