<ul class="media-list">
  <% records.each do |record| %>
  <li class="media">
    <div class="media-left">
      <img class="media-object img-rounded" src="<%= current_user.image.thumb80.url %>" alt="user photo">
    </div>
    <div class="media-body">
      <div>
        <%= link_to record.user.name, user_path(record.user) %> <span class="text-muted">posted at <%=record.created_at %></span>
      </div>
      <table class="table">
      <thead>
      <tr>
        <th class="text-left">日付</th>
        <th class="text-left">サイズ</th>
        <th class="text-left">ウェイト</th>
        <th class="text-left">ヒットルアー</th>
      </tr>
    </thead>
     <tbody>
        <tr>
          <td class="text-left"><%= link_to record.date,record %></td>
          <td class="text-left"><%=record.size %></td>
          <td class="text-left"><%=record.weight %></td>
          <td class="text-left"><%=record.lure %></td>
        </tr>
     </tbody>
    </table>
      <div>
          <% if current_user == record.user %>
            <%= link_to "投稿を削除する",record, method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-danger btn-xs" %>
          <% end %>
      </div>
    </div>
  </li>
  <% end %>
  <%= link_to'投稿', new_record_path, class: 'btn btn-primary'%> 
  <%= paginate records %>
</ul>